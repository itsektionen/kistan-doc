{
    "layers": [
        {
            "name": "master",
            "type": "layer",
            "size": 512,
            "op": "add",
            "description": "Main DMX layer",
            "outputs": [
                {
                    "to": "rdmx",
                    "port": 1337,
                    "description": "Outputs the data to the DMX network (dmxd)"
                }
            ],
            "children": [
                {
                    "name": "dimmer",
                    "type": "layer",
                    "size": 512,
                    "op": "mul",
                    "default": 1,
                    "description": "Dimmer for the master layer"
                },
                {
                    "name": "jingle",
                    "type": "alpha_data_layer",
                    "size": 512,
                    "description": "Layer used to dim the jingles",
                    "children": [
                        {
                            "name": "jingle_dimmer",
                            "type": "layer",
                            "size": 512,
                            "op": "mul",
                            "default": 1,
                            "description": "Dimmer for the jingle layer"
                        }
                    ]
                },
                {
                    "name": "default_addition",
                    "type": "layer",
                    "size": 512,
                    "op": "add",
                    "default": 0,
                    "description": "Default Addition Layer",
                    "children": [
                        {
                            "name": "default_dim",
                            "type": "layer",
                            "size": 512,
                            "op": "mul",
                            "default": 1,
                            "description": "Dimmer for the default layer"
                        }
                    ]
                },
                {
                    "name": "addition",
                    "type": "layer",
                    "size": 512,
                    "op": "add",
                    "default": 0,
                    "description": "Addition layer",
                    "children": [
                        {
                            "name": "addition_dim",
                            "type": "layer",
                            "size": 512,
                            "op": "mul",
                            "default": 1,
                            "description": "Dimmer for the addition layer"
                        }
                    ]
                },
                {
                    "name": "movement",
                    "type": "layer",
                    "size": 512,
                    "op": "add",
                    "default": 0,
                    "description": "Used for movement of moving heads, set the position to 0 in other layers and set the movement data here"
                },
                {
                    "name": "shot_roulette",
                    "type": "alpha_data_layer",
                    "size": 512,
                    "description": "Planned to be used for shot roulette"
                },
                {
                    "name": "development_layer",
                    "type": "alpha_data_layer",
                    "size": 512,
                    "description": "Only to be used for temporary control. Intended use case is if one person is scripting and you want to develop lmixer's codebase, you use this layer to take control of a fixture."
                }
            ]
        },
        {
            "name": "roof",
            "type": "layer",
            "size": 1920,
            "op": "add",
            "default": 0,
            "description": "Main roof LED layer",
            "children": [
                {
                    "name": "roof_dim",
                    "type": "layer",
                    "size": 1920,
                    "op": "mul",
                    "default": 0.4,
                    "description": "Dims the roof"
                },
                {
                    "name": "roof_add",
                    "type": "layer",
                    "size": 1920,
                    "op": "add",
                    "default": 0,
                    "description": "Addition layer",
                    "children": [
                        {
                            "name": "roof_add_dim",
                            "type": "layer",
                            "size": 1920,
                            "op": "mul",
                            "default": 0,
                            "description": "Used to only add values in specific ranges"
                        }
                    ]
                },
                {
                    "name": "roof_input",
                    "type": "layer",
                    "size": 1920,
                    "op": "add",
                    "default": 0,
                    "description": "Unknown usage"
                },
                {
                    "name": "roof_jingle",
                    "type": "alpha_data_layer",
                    "size": 1920,
                    "description": "Temporary control of the roof for jingles.",
                    "children": [
                        {
                            "name": "roof_jingle_dimmer",
                            "type": "layer",
                            "size": 1920,
                            "op": "mul",
                            "default": 1,
                            "description": "Dimmer for jingles"
                        }
                    ]
                }
            ],
            "outputs": [
                {
                    "to": "LED Roof",
                    "port": 1337,
                    "description": "Outputs the data to the roof led"
                }
            ]
        },
        {
            "name": "sign",
            "size": 1710,
            "op": "add",
            "description": "Base layer for the kistan sign",
            "children": [
                {
                    "name": "sign_dim",
                    "size": 1710,
                    "op": "mul",
                    "default": 1,
                    "description": "Dimmer for the sign"
                },
                {
                    "name": "sign_add",
                    "size": 1710,
                    "op": "add",
                    "default": 0,
                    "description": "Addition layer for the sign"
                }
            ],
            "inputs": [
                {
                    "port": 1234,
                    "description": "UDP input port for the sign"
                }
            ],
            "outputs": [
                {
                    "to": "Sign",
                    "port": 1337,
                    "description": "Outputs the data to the sign"
                }
            ]
        }
    ]
}